<!--Pages/text/text.wxml-->
<!--行内元素，若换行加\n-->
<text>你好！Dot！\n</text>
<text>Hello！\n</text>

<!--2.selectable：time-->
<!--默认情况下text中的文本不支持选择-->
<text selectable="{{true}}">Hello Fei\n</text>

<!--3.space-->
<!--决定文本空格大小-->
<text>Hello World\n</text>
<text space='nbsp'>Hello World\n</text>
<text space='emsp'>Hello World\n</text>
<text space='ensp'>Hello World\n</text>

<!--4.decode属性：是否解码文本-->
<!--决定文本空格大小-->
<text>5 &gt; 3\n</text>
<text decode>5 &gt; 3</text>
